<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:elevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/book_item_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/book_item_readerCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:textSize="16sp"
            android:background="#a0000000"
            android:gravity="right|center_vertical"
            android:textColor="@color/colorWhite"
            android:paddingHorizontal="5dp"
            android:paddingVertical="3dp"
            app:layout_constraintRight_toRightOf="@id/book_item_image"
            app:layout_constraintBottom_toBottomOf="@id/book_item_image" />

        <TextView
            android:id="@+id/book_item_abstract"
            android:textSize="15sp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="Abstract test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="@id/book_item_name"
            app:layout_constraintTop_toBottomOf="@id/book_item_name"
            app:layout_constraintRight_toRightOf="@id/book_item_name"/>

        <TextView
            android:id="@+id/book_item_name"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:text="UI test"
            android:ellipsize="marquee"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingTop="5dp"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/book_item_image"
            app:layout_constraintTop_toBottomOf="@id/book_item_image"
            app:layout_constraintLeft_toLeftOf="@id/book_item_image"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>