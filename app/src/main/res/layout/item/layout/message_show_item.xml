<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.allen.library.SuperTextView
                android:id="@+id/message_title"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                app:sLeftTextString="@string/message_item_title"
                app:sLeftTextGravity="left"
                app:sLeftTextSize="30sp"
                app:sLeftTextColor="@color/black"
                app:sBottomDividerLineMarginLR="10dp"
                app:sDividerLineType="bottom"
                app:sDividerLineColor="@color/black"
                app:sDividerLineHeight="1sp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/message_content"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                app:layout_constraintTop_toBottomOf="@id/message_title"
                android:text="@string/message_item_content"
                android:textSize="20sp"
                android:gravity="top|start"
                android:paddingLeft="10dp"
                android:maxLines="3"
                android:ellipsize="end"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>