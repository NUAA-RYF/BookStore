<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/book_list_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginVertical="10dp"
        android:elevation="6dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/bookList_image"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/bookList_name"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="test"
                android:textSize="20sp"
                android:paddingVertical="3dp"
                android:paddingHorizontal="3dp"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical|start"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/bookList_image"/>

            <TextView
                android:id="@+id/bookList_abstract"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingVertical="3dp"
                android:paddingHorizontal="3dp"
                android:textSize="14sp"
                android:text="test"
                android:singleLine="true"
                android:gravity="center_vertical|start"
                app:layout_constraintTop_toBottomOf="@id/bookList_name"
                app:layout_constraintLeft_toRightOf="@id/bookList_image"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
