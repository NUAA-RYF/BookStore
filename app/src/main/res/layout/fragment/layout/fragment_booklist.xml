<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.BookListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bootstrap_gray_lighter">

    <include
        android:id="@+id/bookList_head"
        layout="@layout/head_item"
        app:layout_constraintTop_toTopOf="parent"/>

    <ListView
        android:id="@+id/bookCategory_list_listView"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="3dp"
        app:layout_constraintTop_toBottomOf="@id/bookList_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:listSelector="@color/bootstrap_gray_light"
        />

    <ListView
        android:id="@+id/book_list_listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@color/bootstrap_gray_light"
        android:dividerHeight="1sp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookList_head"
        app:layout_constraintLeft_toRightOf="@id/bookCategory_list_listView"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
