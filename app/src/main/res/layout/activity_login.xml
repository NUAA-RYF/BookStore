<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <EditText
        android:id="@+id/login_account"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="@string/login_hint_account"
        android:drawableLeft="@drawable/ic_account_box"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="@string/login_hint_password"
        android:drawableLeft="@drawable/ic_lock_outline"
        app:layout_constraintTop_toBottomOf="@id/login_account"
        app:layout_constraintLeft_toLeftOf="@id/login_account"
        app:layout_constraintRight_toRightOf="@id/login_account"/>

    <com.allen.library.SuperButton
        android:id="@+id/login_signIn"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="@string/login_signIn"
        app:sCornersRadius="20dp"
        android:textColor="@color/white"
        app:sSolidColor="@color/DimGray"
        app:layout_constraintLeft_toLeftOf="@id/login_password"
        app:layout_constraintRight_toRightOf="@id/login_password"
        app:layout_constraintTop_toBottomOf="@id/login_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.6"
        />

    <com.allen.library.SuperButton
        android:id="@+id/login_signUp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="@string/login_signUp"
        app:sCornersRadius="20dp"
        android:textColor="@color/white"
        app:sSolidColor="@color/DimGray"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/login_signIn"
        app:layout_constraintLeft_toLeftOf="@id/login_signIn"
        app:layout_constraintRight_toRightOf="@id/login_signIn"/>
    
    <TextView
        android:id="@+id/login_forget"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="@string/login_forget"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/colorBlue_Light"
        app:layout_constraintTop_toBottomOf="@id/login_password"
        app:layout_constraintRight_toRightOf="@id/login_password"
        android:layout_marginTop="10dp"
        />

    <CheckBox
        android:id="@+id/login_remember"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="@string/login_remember"
        android:textColor="@color/colorBlue_Light"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/login_password"
        app:layout_constraintLeft_toLeftOf="@id/login_password"/>

</androidx.constraintlayout.widget.ConstraintLayout>