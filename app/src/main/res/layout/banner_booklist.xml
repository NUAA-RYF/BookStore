<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="3dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="3dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/banner_book_image"
                android:layout_width="170sp"
                android:layout_height="200sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/banner_book_name"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:text="test"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/banner_book_image"
                app:layout_constraintRight_toRightOf="@id/banner_book_image"
                app:layout_constraintLeft_toLeftOf="@id/banner_book_image"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/banner_book_isSelected"
                android:layout_width="85sp"
                android:layout_height="30sp"
                android:text="@string/banner_isSelected"
                android:textColor="@color/Gray"
                app:layout_constraintLeft_toLeftOf="@id/banner_book_image"
                app:layout_constraintTop_toBottomOf="@id/banner_book_name"/>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/banner_book_isRecommend"
                android:layout_width="85sp"
                android:layout_height="30sp"
                android:text="@string/banner_isRecommend"
                android:textColor="@color/Gray"
                app:layout_constraintLeft_toRightOf="@id/banner_book_isSelected"
                app:layout_constraintTop_toBottomOf="@id/banner_book_name"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
